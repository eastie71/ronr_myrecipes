<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name %>">
        <!-- Add the message as a bootstrap click to close message -->
        <a href="#" class="close" data-dismiss="alert">&#215;</a>
        <%= msg %>
      </div>
    <% end %>
  </div>
</div>
